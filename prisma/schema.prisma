generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User { 
id String @id @default(cuid())
name String
email String @unique
password String
birthday String
avatar Avatar?
item Item[]
role Role @default(USER)
iscriptionAt DateTime @default(now())
updateAt DateTime @updatedAt
}
enum Role {
  USER
  ADMIN
  CLUB
}

model Item {
id String @id @default(cuid())
title String
content String
price String
owner User @relation(fields: [ownerItemId], references: [id])
ownerItemId String
image ItemImg[]
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}
model Avatar {
  id           String   @id @default(cuid())
  publicId     String
  folder       String
  fieldName    String
  originalName String
  secureUrl    String
  resourceType String
  mimetype     String
  format       String
  width        Int
  height       Int
  bytes        Int
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}
model ItemImg {
  id           String   @id @default(cuid())
  publicId     String
  folder       String
  fieldName    String
  originalName String
  secureUrl    String
  resourceType String
  mimetype     String
  format       String
  width        Int
  height       Int
  bytes        Int
  item         Item     @relation(fields: [itemId], references: [id])
  itemId       String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}
